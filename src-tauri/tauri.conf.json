{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Clip Mark",
  "version": "1.0.0",
  "identifier": "com.clip-mark",
  "build": {
    "beforeDevCommand": "pnpm dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "pnpm build",
    "frontendDist": "../dist"
  },
  "app": {
    "security": {
      "assetProtocol": {
        "enable": true,
        "scope": ["$CACHE/**"]
      },
      "csp": "asset: http://asset.localhost"
    },
    "trayIcon": {
      "id": "tray-icon",
      "iconPath": "icons/icon.ico"
    },
    "windows": [
      {
        "url": "/configuration",
        "label": "clip-mark",
        "title": "Clip Mark",
        "decorations": false,
        "visible": false,
        "skipTaskbar": true,
        "resizable": false
      },
      {
        "url": "/recording-status",
        "label": "recording-status",
        "title": "Recording Status",
        "width": 175,
        "height": 175,
        "decorations": false,
        "skipTaskbar": true,
        "resizable": false,
        "alwaysOnTop": true,
        "transparent": true,
        "shadow": false,
        "visible": false
      },
      {
        "url": "/capture-note",
        "label": "capture-note",
        "title": "Capture Note",
        "width": 600,
        "height": 100,
        "decorations": false,
        "skipTaskbar": true,
        "resizable": false,
        "alwaysOnTop": true,
        "transparent": true,
        "shadow": false,
        "visible": false
      }
    ]
  },
  "bundle": {
    "createUpdaterArtifacts": true,
    "active": true,
    "targets": ["nsis", "msi"],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "publisher": "Made by Dom | Dev",
    "category": "Utility",
    "longDescription": "Quickly capture important moments in your OBS recordings. Includes ability to make windows fullscreen borderless.",
    "windows": {
      "nsis": {
        "installerIcon": "icons/icon.ico"
      }
    }
  },
  "plugins": {
    "updater": {
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IEVCMTdBNDg5NTJEN0FCRkIKUldUN3E5ZFNpYVFYNnhRcUFCY2toWnBRNFFnZTVnZ0NhNXE0Z0FIUWpsVlpSU3JtNFp1MUNvVHgK",
      "endpoints": [
        "https://github.com/domingasp/clip-mark/releases/latest/download/latest.json"
      ],
      "windows": {
        "installMode": "passive"
      }
    }
  }
}
